<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:longClickable="true"
    android:onClick="onCreateContextMenu">


    <ImageView
        android:id="@+id/imageViewStepOverview"
        android:layout_width="match_parent"
        android:layout_height="157dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:contentDescription="step picture"
        android:longClickable="true"
        android:scaleType="centerCrop"
        app:srcCompat="@android:drawable/btn_dialog" />


    <TextView
        android:id="@+id/textViewCookingTime"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_alignEnd="@+id/imageViewStepOverview"
        android:layout_alignRight="@+id/imageViewStepOverview"
        android:layout_alignBottom="@+id/imageViewStepOverview"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="276dp"
        android:layout_marginRight="276dp"
        android:layout_marginBottom="117dp"
        android:shadowColor="#000000"
        android:shadowDx="2.5"
        android:shadowDy="2.3"
        android:shadowRadius="2.6"
        android:text="TextView"
        android:textAllCaps="true"
        android:textColor="@android:color/black" />

</RelativeLayout>